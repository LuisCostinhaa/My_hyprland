{
    "reload_style_on_change": true,
    "layer": "top",
    "position": "top",
    "height": 25,
    "modules-left": [
        "custom/launcher",
        "hyprland/workspaces",
        "hyprland/window"
    ],
    "modules-center": [
        
    ],
    "modules-right": [
        "network",
        "custom/updates",
    //    "memory",
        "cpu",
        "temperature",
        "pulseaudio",
        "clock#date",
        "clock#time"
    ],


    // -------------------------------------------------------------------------
    // Modules
    // -------------------------------------------------------------------------

    "clock#time": {
        "interval": 60,
        "format": "  {:%H:%M} ",
        "tooltip": false
    },

    "clock#date": {
      "interval": 339,
      "format": "  {:%e %b %Y} ", // Icon: calendar-alt
      "tooltip-format": "{:%e %B %Y}",
      "on-click": "gnome-calendar"
    },

    "cpu": {
        "interval": 9,
        "format": "  {usage}%({load}) ", // Icon: microchip
        "states": {
          "warning": 70,
          "critical": 90
        },
        "on-click": "alacritty -e sh -c btop "
    },

    //"memory": {
    //    "interval": 21,
    //    "format": " {used:0.1f}G/{total:0.1f}G   ",
    //    "on-click": "gnome-disks"
    //},

    "network": {
        "interface": "enp34s0",
        "format": "     ",
        "format-wifi": "{essid} ({signalStrength}%) ",
        //"format-ethernet": "{ipaddr}/{cidr} 󰊗",
        "format-ethernet": "    on  ",
        "format-disconnected": "  of", //An empty format will hide the module.
        "tooltip-format": "{ifname} via {gwaddr} 󰊗",
        "tooltip-format-wifi": "{essid} ({signalStrength}%) ",
        "tooltip-format-ethernet": "{ifname} ",
        "tooltip-format-disconnected": "Disconnected",
        "max-length": 50,
        "interval": 15
    },

    "hyprland/window": {
        "format": " {} ",
        "max-length": 200
    },

    "hyprland/workspaces": {
        "all-outputs": true,
        "disable-scroll": true,
        "format": "{icon} {name}",
        "format-icons": {
            "urgent": "",
            "active": "",
            "default": ""
        },
        "icon-size": 10,
        "sort-by-number": true,
        "persistent-workspaces": {
            "1": [],
            "2": [],
            "3": [],
            "4": [],
            "5": [],
            "6": [],
        }
    },

    "pulseaudio": {
        "scroll-step": 5,
        "format": " {icon}  {volume}% ",
        "format-muted": "   0% ",
        "format-icons": {
            "default": [ "", ""]
        },
        "on-click": "pavucontrol",
        "on-click-right": "pamixer -t"
    },

    "custom/updates": {
        "format": "{} {icon}",
        "return-type": "json",
        "on-click": "~/.config/waybar/update_system.sh",
        "format-icons": {
            "has-updates": "  ",
            "updated": "󰂪  "
        },
        "exec-if": "which waybar-module-pacman-updates",
        "exec": "waybar-module-pacman-updates --interval-seconds 15 --network-interval-seconds 300"
    },
    "custom/launcher": {
        "format": "   ",
        "on-click": "pkill rofi || .config/rofi/launchers/launcher.sh",
        "tooltip": false
    },

     "temperature": {
         "thermal-zone": 2,
         "interval": 27,
         "hwmon-path": "/sys/devices/pci0000:00/0000:00:18.3/hwmon/hwmon3/temp1_input",
         "critical-threshold": 60,
         "format-critical": "  {temperatureC}°C ",
         "format": "  {temperatureC}°C "
            },
      "tooltip": true
    },
}
